%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sing up
    %a.general-login-icon{ href: user_facebook_omniauth_authorize_path }
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
    html: {class: "general-form"}) do |f|
    .form-group.mb-30
      = f.label :email, class: "control-label font-weight-light"
      = f.input_field :email, class: "form-control", id: "email"
    .form-group.mb-30
      = f.label :password, class: "control-label font-weight-light"
      = f.input_field :password, class: "form-control", id: "password"
    .form-group.mb-30
      = f.label :password_confirmation, class: "control-label font-weight-light"
      = f.input_field :password_confirmation, class: "form-control",
        id: "password", autocomplete: "off"
    .text-center
      = f.submit 'Sing up', class: "btn btn-default mb-20"
  %p.general-sign-text.text-center
    Do you have account?
    %a.in-gold-500{ href: new_user_session_path } Log in
